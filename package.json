{
  "name": "quick-dash-launcher",
  "version": "1.0.0",
  "main": "dist/main/main.js",
  "scripts": {
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:renderer": "webpack --mode production",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "dev:renderer": "webpack serve --mode development",
    "dev:electron": "electron .",
    "dev": "npm run build:main && npm run build:preload && concurrently \"npm run dev:renderer\" \"wait-on http://localhost:9000 && cross-env NODE_ENV=development npm run dev:electron\"",
    "start": "npm run build && electron .",
    "dist": "npm run build && electron-builder"
  },
  "keywords": ["launcher", "quick", "dash", "hotkey", "windows"],
  "author": "",
  "license": "ISC",
  "description": "Quick access launcher for Windows with global hotkey support",
  "devDependencies": {
    "@types/node": "^24.0.7",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "electron": "^37.1.0",
    "electron-builder": "^26.0.12",
    "html-webpack-plugin": "^5.6.3",
    "path-browserify": "^1.0.1",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "wait-on": "^8.0.3",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "electron-store": "^10.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "build": {
    "appId": "com.example.quick-dash-launcher",
    "productName": "QuickDashLauncher",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
