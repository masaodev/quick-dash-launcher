{
  "name": "quick-dash-launcher",
  "version": "1.0.0",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development ELECTRON_IS_DEV=1 vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "npm run build && electron .",
    "dist": "npm run build && electron-builder",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write 'src/**/*.{ts,tsx,css}'"
  },
  "keywords": [
    "launcher",
    "quick",
    "dash",
    "hotkey",
    "windows"
  ],
  "author": "",
  "license": "ISC",
  "description": "Quick access launcher for Windows with global hotkey support",
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/node": "^24.0.7",
    "@types/pino": "^7.0.4",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "@vitejs/plugin-react": "^4.6.0",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "electron": "^37.1.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.3.0",
    "path-browserify": "^1.0.1",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "vite": "^6.0.0",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "wait-on": "^8.0.3"
  },
  "dependencies": {
    "@types/minimatch": "^5.1.2",
    "electron-store": "^10.1.0",
    "extract-file-icon": "^0.3.2",
    "minimatch": "^10.0.3",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "build": {
    "appId": "com.example.quick-dash-launcher",
    "productName": "QuickDashLauncher",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
