{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Electron: Main (デバッグ)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
      },
      "args": [".", "--remote-debugging-port=9223"],
      "outputCapture": "std",
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/dist/main/**/*.js",
        "!**/node_modules/**"
      ],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/dist/main/**",
        "${workspaceFolder}/src/main/**",
        "!**/node_modules/**"
      ],
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ],
      "preLaunchTask": "npm: dev"
    },
    {
      "name": "Electron: Renderer (デバッグ)",
      "type": "chrome",
      "request": "attach",
      "port": 9223,
      "webRoot": "${workspaceFolder}/src/renderer",
      "timeout": 30000,
      "sourceMaps": true
    }
  ],
  "compounds": [
    {
      "name": "Electron: All (メイン+レンダラー)",
      "configurations": [
        "Electron: Main (デバッグ)",
        "Electron: Renderer (デバッグ)"
      ],
      "presentation": {
        "hidden": false,
        "group": "electron",
        "order": 1
      }
    }
  ]
}
